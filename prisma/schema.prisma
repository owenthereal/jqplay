generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model snippets {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  slug      String?  @unique
  json      String
  query     String
  options   String[]
  createdAt DateTime @default(now())
}
